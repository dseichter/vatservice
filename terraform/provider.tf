terraform {

  required_version = ">= 1.7"

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    archive = {
      source  = "hashicorp/archive"
      version = "~> 2.0"
    }
  }
}

provider "aws" {
  default_tags {
    tags = {
      Project   = "VATService"
      terraform = "yes"
    }
  }
}